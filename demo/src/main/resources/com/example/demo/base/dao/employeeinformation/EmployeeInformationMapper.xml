<?xml version="1.0"  encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.base.dao.employeeinformation.EmployeeInformationDao">
    <resultMap id="BaseResultMap" type="com.example.demo.base.dao.employeeinformation.EmployeeInformationDto">
        <id column="EMPLOYEE_ID" property="employeeId"/>
        <result column="PASSWORD" property="password"/>
        <result column="EMPLOYEE_NAME" property="employeeName"/>
    </resultMap>

    <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- SELECT -->
    <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <select id="selectOne" resultMap="BaseResultMap">
        SELECT
            EMPLOYEE_ID,
            EMPLOYEE_NAME
        FROM
            EMPLOYEE
        WHERE
            EMPLOYEE_ID = #{employeeId}
    </select>

    <select id="selectMany" resultMap="BaseResultMap">
        SELECT
        EMPLOYEE_ID,
        EMPLOYEE_NAME
        FROM
        EMPLOYEE
        <where>
            <if test="employeeId != null">
                EMPLOYEE_ID = #{employeeId}
            </if>
            <if test="employeeName != null">
                OR
                EMPLOYEE_NAME LIKE CONCAT('%', #{employeeName}, '%')
            </if>
        </where>
    </select>

    <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- INSERT -->
    <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <insert id="insertOne" parameterType="com.example.demo.base.dao.employeeinformation.EmployeeInformationDto">
        INSERT INTO EMPLOYEE
        <trim suffixOverrides="," suffix=")" prefix="(">
            <if test="employeeId != null">
                EMPLOYEE_ID,
            </if>
            <if test="password != null">
                PASSWORD,
            </if>
            <if test="employeeName != null">
                EMPLOYEE_NAME,
            </if>
            <if test="role != null">
                ROLE,
            </if>
        </trim>
        <trim suffixOverrides="," suffix=")" prefix="values(">
            <if test="employeeId != null">
                #{employeeId},
            </if>
            <if test="password != null">
                #{password},
            </if>
            <if test="employeeName != null">
                #{employeeName},
            </if>
            <if test="role != null">
                #{role},
            </if>
        </trim>
    </insert>

    <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- UPDATE -->
    <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <update id="updateOne" parameterType="com.example.demo.base.dao.employeeinformation.EmployeeInformationDto">
        UPDATE EMPLOYEE
        <set>
            <if test="employeeId != null">
                EMPLOYEE_ID = #{employeeId},
            </if>
            <if test="employeeName != null">
                EMPLOYEE_NAME = #{employeeName},
            </if>
        </set>
        <where>
            EMPLOYEE_ID = #{employeeId}
        </where>
    </update>

    <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- DELETE -->
    <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <delete id="deleteOne" parameterType="string">
        DELETE FROM EMPLOYEE WHERE EMPLOYEE_ID = #{employeeId}
    </delete>
</mapper>